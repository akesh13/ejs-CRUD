<div class="row">
    <div class="col-md6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <form action="/create" method="post">
                    <div class="form-group mt-2 mb-2">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" value="<%= user.name %>" class="form-control" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="email">E-mail</label>
                        <input type="email" name="email" id="email" value="<%= user.email %>" class="form-control" required>
                    </div><div class="form-group mt-2 mb-2">
                        <label for="mobile">Mobile</label>
                        <input type="number" name="mobile" id="mobile" value="<%= user.mobile %>" class="form-control" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="address">Address</label>
                        <textarea name="address" id="address" cols="30" rows="5" class="form-control" rows="10" required><%= user.address%></textarea>
                    </div>
                    <div class="form-group" mt-2 mb-2>
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                    

                </form>
            </div>
        </div>
    </div>
</div>